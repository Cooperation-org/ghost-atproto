// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  AUTHOR
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   // Hashed password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Authorization
  role Role @default(USER)

  // NEW: Add these Bluesky fields
  blueskyHandle      String? @map("bluesky_handle")
  blueskyPassword    String? @map("bluesky_password")
  blueskyDid         String? // Decentralized identifier

  // Ghost integration (supports any Ghost server)
  // Ghost fields
  ghostApiKey        String? @map("ghost_api_key")
  ghostUrl           String? @map("ghost_url")
  ghostWebhookId     String? @map("ghost_webhook_id")
  
  // NEW: Add Ghost Content API Key
  ghostContentApiKey String? @map("ghost_content_api_key")

  // Relations
  posts         Post[]
  syncLogs      SyncLog[]
  oauthSessions OAuthSession[]
  submittedCivicActions CivicAction[] @relation("SubmittedActions")
  reviewedCivicActions  CivicAction[] @relation("ReviewedActions")

  @@map("users")
}

model OAuthSession {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // OAuth tokens
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  tokenType    String   @default("DPoP")

  // DPoP key (for token binding)
  dpopKeyJwk   String   @db.Text // JSON Web Key for DPoP

  // Session metadata
  sub          String   // Subject (DID)
  scope        String?  // Granted scopes
  expiresAt    DateTime

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("oauth_sessions")
}

model Post {
  id           String @id @default(cuid())
  title        String
  content      String @db.Text
  excerpt      String? @db.Text
  slug         String
  status       String @default("draft") // draft, published, scheduled
  featureImage String?

  // Ghost data
  ghostId   String? @unique
  ghostSlug String?
  ghostUrl  String?

  // ATProto data
  atprotoUri String?
  atprotoCid String?

  // Metadata
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("posts")
}

model SyncLog {
  id     String @id @default(cuid())
  action String // "publish", "update", "delete"
  status String // "success", "error", "pending"
  source String // "ghost", "atproto"
  target String // "ghost", "atproto"

  // References
  postId     String?
  ghostId    String?
  atprotoUri String?

  // Error handling
  error      String? @db.Text
  retryCount Int     @default(0)

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sync_logs")
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model CivicAction {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  eventType   String?  @map("event_type")
  location    String?
  eventDate   DateTime? @map("event_date")
  imageUrl    String?  @map("image_url")
  
  // Submission status
  status      String   @default("pending") // pending, approved, rejected
  isPinned    Boolean  @default(false) @map("is_pinned")
  
  // Review
  reviewedBy  String?  @map("reviewed_by")
  reviewer    User?    @relation("ReviewedActions", fields: [reviewedBy], references: [id])
  reviewedAt  DateTime? @map("reviewed_at")
  rejectionReason String? @db.Text @map("rejection_reason")
  
  // Metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  userId      String
  user        User     @relation("SubmittedActions", fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("civic_actions")
}
