# Database
DATABASE_URL="mysql://user:password@localhost:3306/ghost_atproto"

# JWT Secret - CHANGE THIS IN PRODUCTION
JWT_SECRET="your-secret-key-change-in-production"

# Application URL
# For development: http://127.0.0.1:5000 (NOT localhost)
# For production: https://your-domain.com
APP_URL="http://127.0.0.1:5000"
FRONTEND_URL="http://127.0.0.1:3000"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ATProto OAuth
# No client ID/secret needed - uses handle-based discovery
# The client metadata will be served at APP_URL/client-metadata.json

# Ghost Integration (if needed)
GHOST_URL="https://your-ghost-site.com"
GHOST_ADMIN_API_KEY="your-ghost-admin-key"
GHOST_CONTENT_API_KEY="your-ghost-content-key"

# Server Port
PORT=5000

# Node Environment
NODE_ENV="development"
